<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <LinearLayout
        android:id="@+id/chat_right_msg_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="left"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            app:cardCornerRadius="15dp"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#EDE9E9">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
        <TextView
            android:id="@+id/chat_right_msg_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ebebeb"
            android:text="@string/DhobeeLaundaryAddress"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/chat_right_msg_text_view"
                    android:layout_alignParentRight="true"
                    android:layout_margin="6dp"
                    android:text="10.00 am"/>



            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            app:civ_border_width="2dp"
            android:padding="6dp"
            android:scaleType="centerCrop"
            app:backgroundTint="@color/grey"
            app:civ_border_color="@color/black"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_truck2"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/chat_left_msg_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        >
       <com.google.android.material.floatingactionbutton.FloatingActionButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_truck2"
           app:backgroundTint="@color/white"
           android:layout_margin="15dp"
           />
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="15dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#D8DAE8">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <TextView
            android:id="@+id/chat_left_msg_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#f0effd"
            android:text="@string/DhobeeLaundaryAddress"
            android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chat_left_msg_text_view"
                android:layout_alignParentRight="true"
                android:layout_margin="6dp"
                android:text="10.00 am"/>



        </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>