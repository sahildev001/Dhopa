<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <androidx.appcompat.widget.Toolbar
           android:id="@+id/toolbarProfile"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Profile"
               android:layout_marginLeft="120dp"
               android:textColor="@color/black"
               android:textSize="20sp" />
       </androidx.appcompat.widget.Toolbar>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:layout_marginBottom="20dp"
           android:orientation="horizontal"
           android:background="#0e2a52">
           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/profile"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_marginTop="15dp"
               android:src="@drawable/dp"
               app:civ_border_color="@color/white"
               app:civ_border_width="1dp" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Mukul Singh"
                   android:textSize="20sp"
                   android:textStyle="bold"
                   android:layout_marginTop="20dp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="10dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawableLeft="@drawable/ic_baseline_postcode_24"
                   android:text="Mohali, IN"
                   android:textSize="15sp"
                   android:textStyle="bold"
                   android:layout_marginBottom="20dp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="10dp"/>
           </LinearLayout>
       </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="2dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <TextView
                   android:layout_width="match_parent"
                   android:padding="10dp"
                   android:layout_height="wrap_content"
                   android:text="  Account Info"
                   android:drawableLeft="@drawable/ic_info"
                   android:textSize="18sp"
                   android:textColor="@color/black"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginTop="5dp"
                   android:background="#D8CFCF" />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="10dp"
                   android:text="  My Address"
                   android:drawableLeft="@drawable/ic_baseline_postcode_24"
                   android:textSize="18sp"
                   android:textColor="@color/black"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginTop="5dp"
                   android:background="#D8CFCF" />
               <TextView
                   android:layout_width="match_parent"
                   android:padding="10dp"
                   android:layout_height="wrap_content"
                   android:text="  Change Password"
                   android:drawableLeft="@drawable/ic_lock"
                   android:textSize="18sp"
                   android:textColor="@color/black"/>
           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Other"
           android:layout_marginTop="20dp"
           android:layout_marginBottom="20dp"
           android:layout_marginLeft="20dp"
           android:textSize="18sp"/>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="2dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <TextView
                   android:layout_width="match_parent"
                   android:padding="10dp"
                   android:layout_height="wrap_content"
                   android:text="  Report &amp; Feedback"
                   android:drawableLeft="@drawable/ic_info"
                   android:textSize="18sp"
                   android:textColor="@color/black"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginTop="5dp"
                   android:background="#D8CFCF" />
               <TextView
                   android:id="@+id/profileReferAndEran"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="10dp"
                   android:text="  Refer &amp; Earn"
                   android:drawableLeft="@drawable/share_24"
                   android:textSize="18sp"
                   android:textColor="@color/black"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginTop="5dp"
                   android:background="#D8CFCF" />
              <RelativeLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                  <TextView
                      android:id="@+id/profileNotification"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="  App Notification"
                      android:padding="10dp"
                      android:drawableLeft="@drawable/ic_notification"
                      android:textColor="@color/black"
                      android:textSize="18sp"/>
                  <Switch
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_centerInParent="true"/>


              </RelativeLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginTop="5dp"
                   android:background="#D8CFCF" />
               <TextView
                   android:layout_width="match_parent"
                   android:padding="10dp"
                   android:layout_height="wrap_content"
                   android:text="  Settings"
                   android:drawableLeft="@drawable/ic_settings"
                   android:textSize="18sp"
                   android:textColor="@color/black"/>

           </LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="2dp"
           android:layout_marginTop="30dp"
           android:layout_marginLeft="20dp"
           android:layout_marginBottom="75dp"
           android:layout_marginRight="20dp"
           >
           <TextView
               android:id="@+id/tvSignOut"
               android:layout_width="match_parent"
               android:padding="10dp"
               android:layout_height="wrap_content"
               android:text="  Sign Out"
               android:drawableLeft="@drawable/ic_signout"
               android:textSize="18sp"

               android:textColor="@color/black"/>
       </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
   </LinearLayout>

</FrameLayout>